# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in all values
# NEVER commit .env to version control

# --------------------------------------------
# Domain Configuration
# --------------------------------------------
# Main application domain
DOMAIN=pricetracker.example.com

# Email for Let's Encrypt SSL certificate notifications
ACME_EMAIL=admin@example.com

# --------------------------------------------
# Django Configuration
# --------------------------------------------
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-long-random-secret-key-here-min-50-chars

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=pricetracker.example.com,www.pricetracker.example.com

# Comma-separated list of trusted origins for CSRF (include https://)
# IMPORTANT: Include both web domain AND browser extension origins
CSRF_TRUSTED_ORIGINS=https://pricetracker.example.com,https://www.pricetracker.example.com

# --------------------------------------------
# PostgreSQL Configuration
# --------------------------------------------
POSTGRES_DB=pricetracker
POSTGRES_USER=pricetracker_user
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=your-secure-postgres-password-here

# --------------------------------------------
# Redis Configuration
# --------------------------------------------
# Generate with: openssl rand -base64 32
REDIS_PASSWORD=your-secure-redis-password-here

# --------------------------------------------
# MinIO Configuration
# --------------------------------------------
# Generate with: openssl rand -base64 32 | tr -d '/+=' | head -c 32
MINIO_ROOT_USER=minio_admin_user
# Generate with: openssl rand -base64 48 | tr -d '/+='
MINIO_ROOT_PASSWORD=your-secure-minio-password-min-32-chars

# MinIO browser redirect URL
MINIO_BROWSER_REDIRECT_URL=https://minio.pricetracker.example.com

# --------------------------------------------
# Flower Monitoring
# --------------------------------------------
FLOWER_USER=admin
# Generate with: openssl rand -base64 24
FLOWER_PASSWORD=your-secure-flower-password-here

# --------------------------------------------
# Backup Configuration (optional)
# --------------------------------------------
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
